<%- model_class = Collection -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:collection_title) %>:</strong></dt>
  <dd><%= @collection.collection_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address1) %>:</strong></dt>
  <dd><%= @collection.address1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @collection.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address3) %>:</strong></dt>
  <dd><%= @collection.address3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:county) %>:</strong></dt>
  <dd><%= @collection.county %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @collection.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @collection.details %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              collections_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_collection_path(@collection), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              collection_path(@collection),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
