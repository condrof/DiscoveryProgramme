<%- model_class = AxeMaster -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %>
<% if current_user && (current_user.researcher || current_user.admin) && !@axe_master.confirmed %>
	<%= link_to "Confirm Axe Record", confirm_record_admin_axe_master_path(@axe_master), :class => 'btn btn-success btn-large' %>
  	<%= link_to t('.destroy', :default => t("helpers.links.destroy")), axe_master_path(@axe_master), :method => 'delete',
     		  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger btn-large' %>	
<% end %>
  </h1>
</div>

<% if can? :update, @axe_master %>
	<div class = "form-horizontal well">
		<fieldset>
			<legend>Add a bibliography to this record</legend>
			<%= simple_form_for @linkage do |f| %>
				<%= f.hidden_field :sequence_no, :value => @axe_master.seq_no %>
				<%= f.input :bibliography_id, :hint => "Use bibliography link_key" %>
			<div class = "form-actions">
				<%= f.button :submit, :class => 'btn btn-primary' %>
			</div>
			<% end %>
		</fieldset>
<%= link_to "To see a list of all bibliographies, click here", bibliographies_path, :target => '_blank' %>
	</div>
	
	<div class = "form-horizontal well">
		<fieldset>
			<legend>Add a picture to this record</legend>
			<%= simple_form_for @picture, :html => {:multipart => true} do |f| %>
			  <%= f.hidden_field :seq_no, :value => @axe_master.seq_no %>
			  <%= f.hidden_field :user_id, :value => current_user.id %>
			  <%= f.input :document_name %>
			  <%= f.input :description %>
			  <%= f.input :document_type %>
			  <%= f.label :image %>
			  <%= f.file_field :image %> <br />
			<div class = "form-actions">
			  <%= f.button :submit, :class => "btn btn-primary" %>
			</div
			<% end %>
			
		</fieldset>
	</div>
<% end %>

<% if !@axe_master.bibliographies %>
	<div class="form-horizontal well">
		<table class="table ">
			<thead>
				<tr>
					<th>Author</th>
					<th>Year</th>
					<th>Title</th>
					<th>Book Title</th>
					<th>Publication</th>
					<th>Link Key</th>
				</tr>
			</thead>
			<tbody>	
				<% @axe_master.bibliographies.each do |bibliography| %>
				<tr>
					<td><%= bibliography.author %></td>
					<td><%= bibliography.year %></td>
					<td><%= bibliography.title %></td>
					<td><%= bibliography.book_title %></td>
					<td><%= bibliography.publication %></td>
					<td><%= bibliography.linkage_id %></td>
					<% if can? :destroy, AxeMaster %>
						<% @l = @axe_master.linkages.find(:all, :conditions => {:bibliography_id => bibliography.linkage_id} )%>
						<td><%= link_to "Delete", linkage_path(@l), method: :delete, :confirm => "Are you sure?", class: "btn btn-primary"  %></td>	
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>


