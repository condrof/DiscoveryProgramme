<%- model_class = AxeMaster -%>

<%= render 'search_form' %>
<div class="page-header">
	<h1>Axe Records</h1>
</div>


<%= paginate @axe_masters_show %>

<table class="table table-striped">
	<thead>
		<tr>
			<th><%= sort_link @q, :name, "Seq No" %></th>
			<th><%= sort_link @q, :name, "museam_ref" %></th>
			<th class="hidden-phone"><%= sort_link @q, :name, "collections_id" %></th>
			<% if current_user && (current_user.admin || current_user.researcher) %>
				<th class="hidden-phone"><%= sort_link @q, :name, "current_location" %></th>
			<% end %>
			<th class="hidden-phone"><%= sort_link @q, :name, "townland" %></th>
			<th class="hidden-phone"><%= sort_link @q, :name, "area" %></th>
			<th class="hidden-phone"><%= sort_link @q, :name, "county" %></th>
			<th class="hidden-phone"><%= sort_link @q, :name, "discovery_circumstances" %></th>
			<% if can? :update, AxeMaster %>
			<th><%= t '.actions', :default => t("helpers.actions") %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @axe_masters_show.each do |axe_master| %>
		<tr>
			<% if axe_master.confirmed %>
				<td><%= link_to axe_master.seq_no, axe_master_path(axe_master) %></td>
				<td><%= axe_master.museam_ref %></td>
				<td class="hidden-phone"><%= axe_master.collections_id%></td>
				<% if current_user && (current_user.admin || current_user.researcher) %>
					<td class="hidden-phone"><%= axe_master.current_location %></td>
				<% end %>
				<td class="hidden-phone"><%= axe_master.townland %></td>
				<td class="hidden-phone"><%= axe_master.area %></td>
				<td class="hidden-phone"><%= axe_master.county %></td>
				<td class="hidden-phone"><%= axe_master.discovery_circumstances %></td>
				<% if can? :update, axe_master %>
					<td> <%= link_to t('.edit', :default => t("helpers.links.edit")),
					edit_axe_master_path(axe_master), :class => 'btn btn-mini' %>
				<% end %>
				<% if can? :destroy, axe_master %>
					<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
					axe_master_path(axe_master),
					:method => :delete,
					:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
					:class => 'btn btn-mini btn-danger' %> </td>
				<% end %>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @axe_masters_show %>


<% if can? :create, AxeMaster %>
	<%= link_to t('.new', :default => t("helpers.links.new")),
	new_axe_master_path,
	:class => 'btn btn-primary' %>
<% end %>
