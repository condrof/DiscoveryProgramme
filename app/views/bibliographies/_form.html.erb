<%= simple_form_for @bibliography, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :author %>
  <%= f.input :year %>
  <%= f.input :title %>
  <%= f.input :book_title %>
  <%= f.input :publication %>
  <%= f.input :where_published %>
  <%= f.input :published_reference_in_year %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bibliographies_path, :class => 'btn' %>
  </div>
<% end %>
