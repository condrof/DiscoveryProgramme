<%- model_class = StrayAxe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:townland) %>:</strong></dt>
  <dd><%= @stray_axe.townland %></dd>
  <dt><strong><%= model_class.human_attribute_name(:county) %>:</strong></dt>
  <dd><%= @stray_axe.county %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @stray_axe.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @stray_axe.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:followed_up) %>:</strong></dt>
  <dd><%= @stray_axe.followed_up %></dd>
  <dt><strong><%= model_class.human_attribute_name(:museum_ref) %>:</strong></dt>
  <dd><%= @stray_axe.museum_ref %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_location) %>:</strong></dt>
  <dd><%= @stray_axe.current_location %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stray_axes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stray_axe_path(@stray_axe), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stray_axe_path(@stray_axe),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
