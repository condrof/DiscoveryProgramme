<%- model_class = StrayAxe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:townland) %></th>
      <th><%= model_class.human_attribute_name(:county) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:followed_up) %></th>
      <th><%= model_class.human_attribute_name(:museum_ref) %></th>
      <th><%= model_class.human_attribute_name(:current_location) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stray_axes.each do |stray_axe| %>
      <tr>
        <td><%= link_to stray_axe.id, stray_axe_path(stray_axe) %></td>
        <td><%= stray_axe.townland %></td>
        <td><%= stray_axe.county %></td>
        <td><%= stray_axe.comment %></td>
        <td><%= stray_axe.contact %></td>
        <td><%= stray_axe.followed_up %></td>
        <td><%= stray_axe.museum_ref %></td>
        <td><%= stray_axe.current_location %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stray_axe_path(stray_axe), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stray_axe_path(stray_axe),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stray_axe_path,
            :class => 'btn btn-primary' %>
