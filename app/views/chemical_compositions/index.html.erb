<%- model_class = ChemicalComposition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:seq_no) %></th>
      <th><%= model_class.human_attribute_name(:chemical) %></th>
      <th><%= model_class.human_attribute_name(:parts_per_million) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @chemical_compositions.each do |chemical_composition| %>
      <tr>
        <td><%= link_to chemical_composition.seq_no, chemical_composition_path(chemical_composition) %></td>
        <td><%= chemical_composition.chemical %></td>
        <td><%= chemical_composition.parts_per_million %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_chemical_composition_path(chemical_composition), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      chemical_composition_path(chemical_composition),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_chemical_composition_path,
            :class => 'btn btn-primary' %>
