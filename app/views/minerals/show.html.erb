<%- model_class = Mineral -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:seq_no) %>:</strong></dt>
  <dd><%= @mineral.seq_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mineral) %>:</strong></dt>
  <dd><%= @mineral.mineral %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parts_per_million) %>:</strong></dt>
  <dd><%= @mineral.parts_per_million %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              minerals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mineral_path(@mineral), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mineral_path(@mineral),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
