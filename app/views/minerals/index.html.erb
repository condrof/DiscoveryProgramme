<%- model_class = Mineral -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:seq_no) %></th>
      <th><%= model_class.human_attribute_name(:mineral) %></th>
      <th><%= model_class.human_attribute_name(:parts_per_million) %></th>
      <th class="hidden-phone"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @minerals.each do |mineral| %>
      <tr>
        <td><%= link_to mineral.seq_no, mineral_path(mineral) %></td>
        <td><%= mineral.mineral %></td>
        <td><%= mineral.parts_per_million %></td>
        <td class="hidden-phone">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mineral_path(mineral), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mineral_path(mineral),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mineral_path,
            :class => 'btn btn-primary' %>
