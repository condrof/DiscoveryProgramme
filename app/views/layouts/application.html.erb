<!DOCTYPE html>
<html>
<head>
  <title>DiscoveryProgramme</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %> 
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"</head>
<body>
	

<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">DiscoveryProgramme</a>
      <div class="nav-collapse">
        <ul class="nav pull-right">
        		<li><%= link_to "Axe Master", axe_masters_path %></li>
        	<% if !current_user %>
          		<li><%= link_to "Register", new_user_registration_path %></li>
          		<li><%= link_to "Sign in", new_user_session_path %></li>
          	<% else %>
          		<li><%= link_to "Profile", user_path(current_user) %></li>
          	  <% if can? :create, AxeMaster %>
                <li><%= link_to "New Axe", new_axe_master_path %></li>
              <% end %>
          		<li><%= link_to "Settings", edit_user_registration_path %></li>
          		<li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
	          	<% if current_user.admin || current_user.researcher %>
	          		<li><%= link_to "Admin Dashboard", admin_dashboard_path %></li>
	          	<% end %>
          	<% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
	
    <div class="body">
	  <% flash.each do |name, msg| %>
	    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	      <%= msg  %>
	    </div>
	  <% end %>
      <%= yield %>
    </div>

</body>
</html>
